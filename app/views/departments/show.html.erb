<p id="notice"><%= notice %></p>

<h4>部門詳細:</h4>
<p>
  <strong>部門名:</strong>
  <%= @department.name %>
</p>

<p>
  <strong>所在地:</strong>
  <%= @department.location %>
</p>

<p>
  <strong>概要:</strong>
  <%= @department.description %>
</p>

<p>
  <strong>部門長:</strong>
  <% unless @department.leader == nil %>
    <%= User.find(@department.leader).name %>
  <% else %>
    <span>未定</span>
  <% end %>
</p>

<div class="new-department-member">
  <%= form_with scope: :member, url: members_path, local: true do |form| %>
    <%= form.select :user_id, options_for_select(@users.map{|u| [u.name, u.id]}), prompt: '新規メンバーを選択' %>
    <%= form.hidden_field :department_id, value: @department.id %>
    <span class='input-group-append'>
      <button type="submit" class="btn btn-info btn-sm">招待</button>
    </span>
  <% end %>
</div>

<%= link_to '編集', edit_department_path(@department), class: "btn btn-info btn-sm" %> |
<%= link_to '部門一覧', departments_path, class: "btn btn-info btn-sm" %>


<h4>所属メンバー:</h4>
<p>
  <% @department.members.each do |member| %>
    <% user = member.user %>
    <%= link_to "#{user.name}", user_path(user.id) %>
    <%= form_with scope: :member, method: :delete, url: member_path(member), local: true do |form| %>
      <%= form.submit '削除'%>
    <% end %>
  <% end %>
</p>
